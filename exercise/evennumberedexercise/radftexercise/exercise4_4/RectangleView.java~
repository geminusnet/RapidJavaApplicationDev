package exercise4_4;

import java.awt.*;
import java.awt.event.*;

public class RectangleView extends javax.swing.JPanel implements ActionListener {
  
  /** Holds value of property model. */
  private RectangleModel model;
  
  /** Creates new form RectangleView */
  public RectangleView() {
    initComponents();
  }
  
  /** This method is called from within the constructor to
   * initialize the form.
   * WARNING: Do NOT modify this code. The content of this method is
   * always regenerated by the Form Editor.
   */
  private void initComponents() {//GEN-BEGIN:initComponents
    model = new exercise4_4.RectangleModel();

    setLayout(new java.awt.BorderLayout());

    addMouseListener(new java.awt.event.MouseAdapter() {
      public void mouseClicked(java.awt.event.MouseEvent evt) {
        formMouseClicked(evt);
      }
    });

  }//GEN-END:initComponents

  private void formMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_formMouseClicked
    if (model == null) return;

    if (evt.isMetaDown()) {
      model.setWidth(model.getWidth() - 5);
      model.setHeight(model.getHeight() - 5);
    }
    else {
      model.setWidth(model.getWidth() + 5);
      model.setHeight(model.getHeight() + 5);
    }
  }//GEN-LAST:event_formMouseClicked
  
  public void paintComponent(Graphics g) {
    super.paintComponent(g);
      g.fillRect(10, 10, 100, 100);

    if (model == null) return;

    //g.setColor(model.getColor());

    System.out.println("Painted  " + model.getWidth());
    System.out.println("Painted  " + model.getHeight());
    
    if (model.isFilled()) {
      g.fillRect(10, 10, (int)model.getWidth(), (int)model.getHeight());
    }
    else {
      g.drawRect(10, 10, (int)model.getWidth(), (int)model.getHeight());
    }
  }
  
  /** Getter for property model.
   * @return Value of property model.
   */
  public RectangleModel getModel() {
     return model;
  }
  
  /** Setter for property model.
   * @param model New value of property model.
   */
  public void setModel(RectangleModel model) {
    this.model = model;

    if (model != null) {
      // Register the view as listener for the model
      model.addActionListener(this);
    }

    repaint();  
  }
  
  public void actionPerformed(java.awt.event.ActionEvent actionEvent) {
    repaint();
  }
  
  // Variables declaration - do not modify//GEN-BEGIN:variables
  // End of variables declaration//GEN-END:variables
}