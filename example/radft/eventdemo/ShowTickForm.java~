package eventdemo;

/**
 *
 * @author  administrator
 */
public class ShowTickForm extends javax.swing.JApplet {
  /** Creates new form ShowTickForm */
  public ShowTickForm() {
    initComponents();
    tick1.start();
  }
  
  /** This method is called from within the constructor to
   * initialize the form.
   * WARNING: Do NOT modify this code. The content of this method is
   * always regenerated by the Form Editor.
   */
  private void initComponents() {//GEN-BEGIN:initComponents
    tick1 = new eventdemo.Tick();
    messagePanel1 = new messagepaneldemo.MessagePanel();
    
    tick1.addTickListener(new eventdemo.TickListener() {
      public void handleTick(eventdemo.TickEvent evt) {
        tick1HandleTick(evt);
      }
    });
    
    
    messagePanel1.setBackground(java.awt.Color.cyan);
    messagePanel1.setYCoordinate(30);
    messagePanel1.addMouseListener(new java.awt.event.MouseAdapter() {
      public void mousePressed(java.awt.event.MouseEvent evt) {
        messagePanel1MousePressed(evt);
      }
      public void mouseReleased(java.awt.event.MouseEvent evt) {
        messagePanel1MouseReleased(evt);
      }
    });
    
    getContentPane().add(messagePanel1, java.awt.BorderLayout.CENTER);
    
  }//GEN-END:initComponents
  
  private void messagePanel1MouseReleased(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_messagePanel1MouseReleased
    tick1.start();
  }//GEN-LAST:event_messagePanel1MouseReleased
  
    private void messagePanel1MousePressed(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_messagePanel1MousePressed
      tick1.stop();
    }//GEN-LAST:event_messagePanel1MousePressed
    
    private void tick1HandleTick(eventdemo.TickEvent evt) {//GEN-FIRST:event_tick1HandleTick
      messagePanel1.setMessage("Tick count is " + evt.getTickCount() +
        " and tick interval is " + evt.getTickInterval());
    }//GEN-LAST:event_tick1HandleTick
    
    // Variables declaration - do not modify//GEN-BEGIN:variables
    private eventdemo.Tick tick1;
    private messagepaneldemo.MessagePanel messagePanel1;
    // End of variables declaration//GEN-END:variables
}